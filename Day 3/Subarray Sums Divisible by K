class Solution {
    public int subarraysDivByK(int[] nums, int k) {
        Map<Integer, Integer> map = new HashMap<>();
        map.put(0, 1);
        int ans = 0;
        int sum = 0;
        
        for (int num : nums) {
            sum += num;
            int rem = ((sum % k) + k) % k;  // Handle negative remainder

            ans += map.getOrDefault(rem, 0);
            map.put(rem, map.getOrDefault(rem, 0) + 1);
        }
        
        return ans;
    }
}